#include <stdio.h>
#include <stdlib.h>

int main(){
    
    int num1, num2;
    float resultado;
    
    do{
    
        printf("Insira o primeiro valor: ");
        scanf("%d", &num1);
        
        if(num1 == 0) printf("Erro: O valor não pode ser zero, por favor, tente novamente!\n\n");
    
    }while(num1 == 0);
    
    do{    
        printf("Insira o segundo valor: ");
        scanf("%d", &num2);
    
        if(num2 == 0) printf("Erro: O valor não pode ser 0, por favor, tente novamente!\n\n");
    
    }while(num2 == 0);
    
    resultado = (float)num1 / (float)num2;
    
    printf("\nRESULTADO:");
    printf("\nResultado de %d/%d = %.1f", num1, num2, resultado);
    
    return 0;
}
